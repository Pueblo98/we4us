{
  "name": "we4us-gbm",
  "version": "0.1.0",
  "private": true,
  "description": "Patient-driven data sharing platform for GBM patients and caregivers",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "dev:web": "pnpm --filter @we4us/web dev",
    "dev:api": "pnpm --filter @we4us/api dev",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=20.0.0"
  }
}
